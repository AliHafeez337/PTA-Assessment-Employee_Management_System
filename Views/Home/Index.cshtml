@model EmployeeManagementSystem.Models.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="mb-4">
    <h2>Dashboard</h2>
    <p class="text-muted">Welcome to the Employee Management System. Here's a quick overview.</p>
</div>

<!-- ─── STAT CARDS ─────────────────────────────────────────────── -->
<div class="row g-4 mb-5">

    <!-- Total Employees -->
    <div class="col-md-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body d-flex align-items-center gap-3 p-4">
                <div class="rounded-circle bg-primary bg-opacity-10 p-3">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32"
                         fill="#0d6efd" viewBox="0 0 16 16">
                        <path d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1zm4-6a3 3 0 1 0 0-6
                                 3 3 0 0 0 0 6m-5.784 6A2.24 2.24 0 0 1 5 13c0-1.355.68-2.75
                                 1.936-3.72A6.3 6.3 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1zM4.5 8a2.5
                                 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5"/>
                    </svg>
                </div>
                <div>
                    <div class="text-muted small fw-semibold text-uppercase">Total Employees</div>
                    <div class="fs-2 fw-bold text-primary">@Model.TotalEmployees</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Active Departments -->
    <div class="col-md-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body d-flex align-items-center gap-3 p-4">
                <div class="rounded-circle bg-success bg-opacity-10 p-3">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32"
                         fill="#198754" viewBox="0 0 16 16">
                        <path d="M8.277.084a.5.5 0 0 0-.554 0l-7.5 5A.5.5 0 0 0 .5 6h1.875v7H.5a.5.5
                                 0 0 0 0 1h15a.5.5 0 0 0 0-1h-1.875V6H15.5a.5.5 0 0 0 .277-.916zm-1.265
                                 1.82.988-.659V6h-2.67zm-2.13 4.096H3.375V6h2.631zm5.265 0V6h2.631v-.659zM6
                                 6.5h4V13H6zm-2.375.5H5V13H3.625zm9.75 6H11V7h1.375zM8.5 1.06l3.987
                                 2.658H4.513z"/>
                    </svg>
                </div>
                <div>
                    <div class="text-muted small fw-semibold text-uppercase">Active Departments</div>
                    <div class="fs-2 fw-bold text-success">@Model.TotalActiveDepartments</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Average Salary -->
    <div class="col-md-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body d-flex align-items-center gap-3 p-4">
                <div class="rounded-circle bg-warning bg-opacity-10 p-3">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32"
                         fill="#ffc107" viewBox="0 0 16 16">
                        <path d="M4 10.781c.148 1.667 1.513 2.85 3.591 3.003V15h1.043v-1.216c2.27-.179
                                 3.678-1.438 3.678-3.3 0-1.59-.947-2.51-2.956-3.028l-.722-.187V3.467c1.122.11
                                 1.879.714 2.07 1.616h1.47c-.166-1.6-1.54-2.748-3.54-2.875V1H7.591v1.233c-1.939.23
                                 -3.27 1.472-3.27 3.156 0 1.454.966 2.483 2.661 2.917l.61.162v4.031c-1.149-.17
                                 -1.94-.8-2.131-1.718zm3.391-3.836c-1.043-.263-1.6-.825-1.6-1.616 0-.944.704
                                 -1.641 1.8-1.828v3.495l-.2-.05zm1.591 1.872c1.287.323 1.852.859 1.852 1.769
                                 0 1.097-.826 1.828-2.2 1.939V8.73z"/>
                    </svg>
                </div>
                <div>
                    <div class="text-muted small fw-semibold text-uppercase">Average Salary</div>
                    <div class="fs-2 fw-bold text-warning">@Model.AverageSalary.ToString("C0")</div>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- ─── QUICK LINKS ─────────────────────────────────────────────── -->
<div class="row g-3">
    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <h5 class="card-title">Manage Employees</h5>
                <p class="card-text text-muted">Add, edit, search, and delete employee records.</p>
                <a asp-controller="Employee" asp-action="Index" class="btn btn-primary">
                    Go to Employees →
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <h5 class="card-title">Manage Departments</h5>
                <p class="card-text text-muted">Create and manage departments across your organization.</p>
                <a asp-controller="Department" asp-action="Index" class="btn btn-success">
                    Go to Departments →
                </a>
            </div>
        </div>
    </div>
</div>